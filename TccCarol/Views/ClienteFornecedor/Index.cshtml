<div id="pessoa">
    <!--CORPO-->
    <div class="content">
        <div class="animated fadeIn">

            <div class="row">
                <!--LISTA-->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header-custom">
                            <h4 class="box-title">
                                CLIENTES E FORNECEDORES
                                <button type="submit" class="btn btn-success btn-sm float-right" v-on:click="AbrirModal"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp;Adicionar</button>
                            </h4>
                        </div>
                        <div class="card-body--">
                            <div class="table-stats order-table ov-h">
                                <table class="table ">
                                    <thead>
                                        <tr>
                                            <th scope="col" width="25%">Nome</th>
                                            <th scope="col" width="10%">Tipo</th>
                                            <th scope="col" width="3%">Compras</th>
                                            <th  class="text-center" scope="col" width="15%">Telefone</th>
                                            <th scope="col" width="25%">Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr v-for="(pessoa, index) in Pessoas">
                                            <td>{{pessoa.Nome}}</td>
                                            <td><span v-if="pessoa.Fornecedor">Fornecedor</span><span v-else>Cliente</span></td>
                                            <td class="text-right">-</td>
                                            <td class="text-right">{{pessoa.Numero}}</td>
                                            <td>
                                                <button type="submit" class="btn btn-success btn-sm" v-on:click="Editar(pessoa, index)"><i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;Alterar</button>
                                                <button type="submit" class="btn btn-danger btn-sm" v-on:click="Excluir(pessoa.Id, index)"><i class="fa fa-trash" aria-hidden="true"></i>&nbsp;Excluir</button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div> <!-- /.table-stats -->
                        </div>
                    </div> <!-- /.card -->
                </div>
            </div>

        </div>
    </div>

    <!--MODAL CADASTRO-->
    <div class="modal" tabindex="-1" role="dialog" id="cadastro">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <span class="modal-title">Cadastrar Novo Cliente/Fornecedor</span>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!--CADASTRO-->
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label class="control-label mb-1">Nome</label>
                                <input type="text" class="form-control" v-model="Nome">
                            </div>
                        </div>
                        <div class="col-2">
                            <label class="control-label mb-1">Fornecedor</label>
                            <div class="input-group">
                                <input type="checkbox" class="form-control" v-model="Fornecedor">
                            </div>
                        </div>
                        <div class="col-8">
                            <label class="control-label mb-1">Telefone</label>
                            <div class="input-group">
                                <input type="text" class="form-control" v-model="Numero">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" v-on:click="Gravar"><i class="fa fa-floppy-o" aria-hidden="true"></i>&nbsp;Salvar</button>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/cliente-fornecedor/cliente-fornecedor.js"></script>
}